{
  "manifest_version": 3,
  "name": "React Chrome Extension",
  "version": "1.0.0",
  "description": "A simple React app as a Chrome extension",
  "permissions": ["downloads", "tabs", "scripting", "tabCapture"],
  "host_permissions": ["<all_urls>"],
  "action": { "default_title": "Screen Recorder" },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*.css"],
      "matches": ["<all_urls>"]
    }
    ,
    {
      "resources": ["vendor/socket.io.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}